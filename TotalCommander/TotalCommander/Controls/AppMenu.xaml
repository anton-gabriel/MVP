            </MenuItem>

            <MenuItem Header="Show">
                <MenuItem Header="Full" IsCheckable="True"/>
                <MenuItem Header="Tree" IsCheckable="True"/>
                <MenuItem Header="Vertical" IsCheckable="True"/>
                <Separator/>
                <MenuItem Header="New Tab"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="Anton Gabriel" IsEnabled="False"/>
                <MenuItem Header="10LF371" IsEnabled="False"/>
                <Hyperlink Name="Link" RequestNavigate="OpenLink" NavigateUri="https://student.unitbv.ro/">
                    gabriel.anton@student.unitbv.ro
                </Hyperlink>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
