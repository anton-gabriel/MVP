<UserControl x:Class="TotalCommander.Controls.CommandMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TotalCommander.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" Click="View_Button">F3 View</Button>
        <Button Grid.Column="1" Click="Edit_Button">F4 Edit</Button>
        <Button Grid.Column="2" Click="Copy_Button">F2 Copy</Button>
        <Button Grid.Column="3" Click="Move_Button">F3 Move</Button>
        <Button Grid.Column="4" Click="NewFolder_Button">F4 New Folder</Button>
        <Button Grid.Column="5" Click="Delete_Button">F5 Delete</Button>
    </Grid>
</UserControl>
